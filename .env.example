# Media Clustering Service - Environment Configuration
# =====================================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control!

# Internal Service Authentication
# --------------------------------
# Generate using: python ../scripts/bootstrap_internal_token.py
# This token must match across all services
INTERNAL_SERVICE_TOKEN=CHANGE_ME_GENERATE_NEW_TOKEN

# Redis Configuration
# -------------------
REDIS_URL=redis://localhost:6379/0

# Storage Service
# ---------------
STORAGE_SERVICE_URL=http://localhost:8000

# Embedding Model
# ---------------
# Options: cpu, cuda, mps (Mac M1/M2)
EMBEDDING_DEVICE=cpu

# API Server
# ----------
API_HOST=0.0.0.0
API_PORT=9007

# Worker Configuration
# --------------------
WORKER_BATCH_SIZE=10
WORKER_POLL_INTERVAL=1.0
WORKER_MAX_RETRIES=3

# Clustering Parameters
# ---------------------
CLUSTER_EPS=0.3
CLUSTER_MIN_SAMPLES=2
CLUSTER_METRIC=cosine

# Logging
# -------
LOG_LEVEL=INFO
